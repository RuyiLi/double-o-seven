{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "array-bracket-newline": 2,
        "array-bracket-spacing": 2,
        "block-scoped-var": 0,
        "camelcase": 2,
        "capitalized-comments": 2,
        "class-methods-use-this": 2,
        "comma-dangle": [
            "error",
            {
                "arrays": "always",
                "objects": "always",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "comma-spacing": 2,
        "comma-style": 2,
        "eqeqeq": 2,
        "no-else-return": 2,
        "quotes": [
            "error",
            "single"
        ],
        "semi": 2,
        "spaced-comment": 2,
        "strict": 2
    },
    "env": {
        "node": true
    }
}